conky.config = {
	update_interval 	= 60,
	alignment 		= 'bottom_right',
	background 		= true,
	color1			= '#FBA922',
	color2 			= '#16A085',
	color3			= '#0d0d0d',
	cpu_avg_samples 	= 2,
	default_color 		= '#131313',
	draw_shades 		= false,
	default_shade_color 	= '#2d2d2d',
	double_buffer 		= true,
	font 			= 'Monospace:size=8',
	gap_x 			= 10,
	gap_y 			= 30,
	minimum_width 		= 400,
	maximum_width 		= 400,
	no_buffers 		= true,
	own_window 		= true,
	own_window_type 	= 'override',
	own_window_transparent 	= true,
    own_window_hints 	= 'undecorated,below,sticky,skip_taskbar,skip_pager',
	use_xft			= true,
}

