! ------------------------------------------------------------------------------
! Font configuration
! ------------------------------------------------------------------------------

!URxvt*font:				xft:M+ Ubuntu:regular:size=12
!URxvt*boldFont:			xft:M+ Ubuntu:bold:size=12
!URxvt*italicFont:		xft:M+ Ubuntu:italic:size=12
!URxvt*boldItalicFont:	xft:M+ Ubuntu:bold italic:size= 12

! ------------------------------------------------------------------------------
! Xft Font Configuration
! ------------------------------------------------------------------------------

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


! ROFI SETUP HERE !
rofi.color-enabled: true
!                   bg       border   separator
rofi.color-window: #05333e, #268BD2, #218A69

!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #05333e, #93a1a1, #05333e, #05333e, #268BD2
rofi.color-active: #05333e, #93a1a1, #05333e, #0055ff, #fff
rofi.color-urgent: #268BD2, #93a1a1, #268BD2, #268BD2, #05333e

rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.lines: 9
rofi.font: Hack Regular 11
rofi.bw: 1
rofi.columns: 2
rofi.padding: 5
rofi.fixed-num-lines: true
rofi.hide-scrollbar: true
rofi.line-margin: 10

